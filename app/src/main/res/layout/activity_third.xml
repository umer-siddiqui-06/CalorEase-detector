<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp">

        <ImageView
            android:id="@+id/selectedImageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop" />

        <!-- Protein -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/proteinImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/protein"
                android:contentDescription="Protein" />
            <TextView
                android:id="@+id/proteinTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein: 0 g"
                android:background="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Fiber -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/fiberImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/fiber"
                android:contentDescription="Fiber" />
            <TextView
                android:id="@+id/fiberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="Fiber: 0 g"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Carbs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/carbsImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/carbs"
                android:contentDescription="Carbohydrates" />
            <TextView
                android:id="@+id/carbsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="Carbs: 0 g"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Fats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/fatImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/fat"
                android:contentDescription="Fat" />
            <TextView
                android:id="@+id/fatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="Fat: 0 g"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Calories -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/caloriesImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/calories"
                android:contentDescription="Calories" />
            <TextView
                android:id="@+id/caloriesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories: 0 kcal"
                android:background="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
